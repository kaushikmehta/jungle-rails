<div class='cateogries'>
  <h3>There are <%= @categories.count %> Categories in the Database</h3>
  <h4>Manage <%= link_to 'Categories',  [:admin, :products] %></h4> 
    <ul>
      <% @categories.each do |category| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to category.name, category %>
          <span class="badge badge-primary badge-pill"><%= category.products.count %></span>
        </li>
      <% end %>
    </ul>
</div>

<div class='products'>
  <h3>And <%= @products.count %> products in the Database</h3>
  <h4>Manage <%= link_to 'Products',  [:admin, :products] %></h4>
    <ul>
      <% @products.each do |product| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to product.name, product %>
          <span class="badge badge-primary badge-pill"><%= product.quantity %></span>
        </li>
      <% end %>
    </ul>
</div>





